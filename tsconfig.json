{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [ "es2016", "dom" ],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
